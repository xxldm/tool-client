  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug App",
      "configurations": [
        "Debug Server",
        "Debug Main Process"
      ],
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      },
      "stopAll": true
    }, {
      "name": "Debug Web",
      "configurations": [
        "Debug Server",
        "Debug Edge Devtools"
      ],
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 2
      },
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        "."
      ],
      "presentation": {
        "hidden": true
      },
      "env": {
        "npm_lifecycle_event": "dev"
      }
    }, {
      "name": "Debug Edge Devtools",
      "request": "launch",
      "type": "vscode-edge-devtools.debug",
      "url": "http://localhost:8080",
      "presentation": {
        "hidden": true
      }
    }, {
      "name": "Debug Server",
      "command": "nr dev",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "VSCODE_DEBUG": "true"
      },
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 3
      }
    }
  ]
}
